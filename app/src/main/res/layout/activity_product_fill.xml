<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    tools:context="com.example.rajithhasith.stock_app_android.Product_fill">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/arrow_back"
        android:id="@+id/button1"/>
    <RelativeLayout
        android:id="@+id/inner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_gravity="center" >

        <TextView android:text="Product Name placeholder"
            android:id="@+id/product_fill_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="10mm"
            android:id="@+id/product_fill_number"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="0"
            android:layout_below="@+id/product_fill_name"/>
        <Button
            android:id="@+id/product_fill_update_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_fill_number"
            android:text="Update" />
    </RelativeLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/arrow_forward"
        android:id="@+id/button2" />

</LinearLayout>
