<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/check_list_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textStyle="bold"
        android:textSize="23sp"/>

    <CheckBox
        android:id="@+id/fill_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="23sp"
        android:padding="15dp"
        />

     <TextView
        android:id="@+id/need_quantity_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/fill_check"
        android:layout_toLeftOf="@id/fill_check"
        android:textStyle="bold"
        android:padding="15dp"
        android:textSize="23sp" />




    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/product_fill_number"
        android:layout_below="@+id/check_list_name_txt"
        android:inputType="number"
        android:gravity="center"
        android:textSize="30sp"
        android:maxLength="3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/need_quantity"
        android:padding="15dp"
        android:textSize="23sp"
        android:layout_below="@+id/check_list_name_txt"
        android:layout_toStartOf="@id/product_fill_number"
        android:layout_toLeftOf="@id/product_fill_number"/>





</RelativeLayout>