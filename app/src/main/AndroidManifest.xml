<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rajithhasith.stock_app_android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProductList"
            android:label="@string/title_activity_product_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Product_fill_count"
            android:label="@string/title_activity_product_fill"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".product_tier_slider"
            android:label="@string/title_activity_product_tier_slider" >
        </activity>
        <activity
            android:name=".Stock_fill_menu"
            android:label="@string/title_activity_stock_fill_menu"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Product_fill_check"
            android:label="@string/title_activity_product_fill_check"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".CheckProductList"
            android:label="@string/title_activity_check_product_list"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
